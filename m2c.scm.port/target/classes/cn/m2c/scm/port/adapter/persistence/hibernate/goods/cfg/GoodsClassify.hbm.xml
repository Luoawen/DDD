<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="all">
	<class name="cn.m2c.goods.domain.classify.GoodsClassify" table="t_goods_classify" lazy="true" 
	optimistic-lock="version" dynamic-insert="true" dynamic-update="true">
		<id name="id" column="id" type="long" unsaved-value="-1">
			<generator class="native" />
		</id>
		<version name="concurrencyVersion" column="concurrency_version" type="int" />
		<property name="createdDate" generated="insert" not-null="true">
			<column name="created_date" sql-type="timestamp" default="CURRENT_TIMESTAMP"></column>
		</property>
		<property name="lastUpdatedDate" generated="always" not-null="true">
			<column name="last_updated_date" sql-type="timestamp" default="CURRENT_TIMESTAMP"></column>
		</property>
		
		
		<property name="goodsClassifyId" column="goods_classify_id" type="string" />
		<property name="goodsClassifyName" column="goods_classify_name" type="string" />
		<property name="goodsCount" column="goods_count" type="int" />
		<property name="orderBy" column="order_by" type="int" />
		<property name="isParent" column="is_parent" type="int" />
		<property name="parentId" column="parent_id" type="string" />
	</class>
</hibernate-mapping>
