<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="all">
	<class name="cn.m2c.scm.domain.model.order.comment.Comment" table="t_order_comment" lazy="true">
		<id name="id" type="long" column="id" length="11">
			<generator class="native" />
		</id>
		<version name="concurrencyVersion" column="concurrency_version" type="int" />
		
		<property name="commentId" column="comment_id" type="string" />
		<property name="orderId" column="order_id" type="string" />
		<property name="orderNo" column="order_no" type="string" />
		<property name="goodsId" column="goods_id" type="string" />
		<property name="goodsName" column="goods_name" type="string" />
		<property name="dealerId" column="dealer_id" type="string" />
		<property name="dealerName" column="dealer_name" type="string" />
		<property name="buyerId" column="buyer_id" type="string" />
		<property name="buyerName" column="buyer_name" type="string" />
		<property name="buyerIcon" column="buyer_icon" type="string" />
		<property name="commentContent" column="comment_content" type="string" />
		<property name="replyContent" column="reply_content" type="string" />
 		
 		<property name="commentLevel" column="comment_level" type="int" />
 		<property name="starLevel" column="star_level" type="int" />
 		<property name="replyStatus" column="reply_status" type="int" />
 		<property name="topStatus" column="top_status" type="int" />
 		<property name="commentStatus" column="comment_status" type="int" />
 		<property name="hideStatus" column="hide_status" type="int" />
 		
 		<property name="commentTime" column="comment_time" type="long" />
 		<property name="replyTime" column="reply_time" type="long" />
		<property name="buyingTime" column="buying_time" type="long" />
		
		<property name="deletedByUser" column="deleted_by_user" type="int" />
		<property name="deletedByAdmin" column="deleted_by_admin" type="int" />
		<property name="modCommentTime" column="mod_comment_time" type="long" />
		
		<property name="goodsUnitPrice" column="goods_unit_price" type="long" />
		<property name="goodsIcon" column="goods_icon" type="string" />
		
	</class>
</hibernate-mapping>
